<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:weightSum="10"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ln1"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="2"
        android:background="#00FFFF"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="0.5"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/back"
                android:layout_width="50dp"
                android:layout_height="26dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/back"
                android:background="#00FFFF"
                android:layout_marginTop="8dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thông tin khai báo y tế toàn dân"
                android:textSize="23dp"
                android:textColor="@color/purple_700"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@id/linear2"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:layout_below="@id/linear1"
            android:orientation="horizontal">

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="1"
                android:textSize="22dp"
                android:layout_marginLeft="60dp"
                android:textColor="#FFFFFF"
                android:background="@drawable/botron_buton"
                android:layout_gravity="center"/>
            <View
                android:layout_width="150dp"
                android:layout_height="1dp"
                android:background="@color/purple_700"
                android:layout_marginTop="40dp"
                />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="2"
                android:textSize="22dp"

                android:textColor="#FFFFFF"
                android:background="@drawable/botron_buton"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="0.5"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thông tin cá nhân"
                android:textSize="20dp"
                android:textColor="@color/purple_700"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:layout_width="143dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:text="Khảo sát bệnh"
                android:textColor="@color/purple_700"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ln2"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="7.2"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/ln1"
        android:layout_marginTop="0dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Việt Nam"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Đại chỉ tại Việt Nam*"
            android:textColor="@color/black"
            android:textSize="20dp" />


        <EditText
            android:id="@+id/diachi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="15"
            android:inputType="text"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/diachihuyen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="15"
            android:hint="Nhập  Huyện:"
            android:inputType="text"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/diachixa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="15"
            android:hint="Nhập Xã:"
            android:inputType="text"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/diachicuthe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="15"
            android:hint="Nhập Đại chỉ cụ thể:"
            android:inputType="text"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Số điện thoại"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/sdt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="15"
            android:hint="Nhập số điện thoại:"
            android:inputType="text"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Email"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="15"
            android:hint="Nhập email:"
            android:inputType="text"
            android:textSize="20dp" />

        <Button
            android:id="@+id/tieptuc"
            android:layout_width="136dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/purple_700"
            android:text="TIẾP TỤC"
            android:textColor="@color/white"
            android:textSize="20dp" />

    </LinearLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/botton_navigation"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_below="@+id/ln2"
        android:layout_marginTop="0dp"
        android:layout_weight="0.8"
        android:background="@color/white"
        app:itemIconSize="30dp"
        app:itemIconTint="@color/color_bar"
        app:itemRippleColor="@android:color/transparent"
        app:labelVisibilityMode="unlabeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_menu" />
</LinearLayout>
